datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma-client"
}

generator pg {
  provider = "planet-graphql"
  output   = "../src/planet-graphql-types.ts"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  posts     Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  author   User   @relation(fields: [authorId], references: [id])
  authorId Int
}
